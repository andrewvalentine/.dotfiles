"""""""""""""""""""""""
" => VIM User Interface
"""""""""""""""""""""""
" Ignore case when searching
set ignorecase

" Highlight search results
set hlsearch

"""""""""""""""""""""
" => Colors and Fonts
"""""""""""""""""""""
" Enable syntax highlighting
syntax enable
colorscheme solarized
set background=dark

"let hour = strftime("%H")
"if 6 <= hour && hour < 18
 "set background=light
"else
  "set background=dark
"endif
"colorscheme solarized
